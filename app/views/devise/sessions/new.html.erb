<div style="background-color: #D9D9D9; min-height: 100vh; display: flex; flex-direction: column; align-items: center; padding: 20px 20px; font-family: sans-serif;">
  <h2 style="margin-bottom: 40px; font-size: 32px; letter-spacing: 4px;">おくすり記録</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { style: "width: 320px;" }) do |f| %>
    <div style="margin-bottom: 20px;">
      <label style="display: block; margin-bottom: 5px;">ログインメールアドレス</label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width: 100%; height: 45px; border: none; padding: 0 10px;" %>
    </div>

    <div style="margin-bottom: 40px;">
      <label style="display: block; margin-bottom: 5px;">パスワード</label>
      <%= f.password_field :password, autocomplete: "current-password", style: "width: 100%; height: 45px; border: none; padding: 0 10px;" %>
    </div>

    <div style="display: flex; flex-direction: column; gap: 20px;">
      <%= f.submit "ログイン", style: "width: 100%; height: 50px; background-color: white; border: none; font-size: 18px; cursor: pointer;" %>
      
      <%= link_to "会員登録", new_user_registration_path, style: "width: 100%; height: 50px; background-color: white; border: none; font-size: 18px; cursor: pointer; text-decoration: none; color: black; display: flex; align-items: center; justify-content: center;" %>
    </div>
  <% end %>

  <div style="margin-top: 30px;">
    <%= link_to "パスワードを忘れた方はこちら", new_user_password_path, style: "color: black; text-decoration: none; font-size: 14px;" %>
  </div>
</div>
