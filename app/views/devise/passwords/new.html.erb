<div style="background-color: #D9D9D9; min-height: 100vh; display: flex; flex-direction: column; align-items: center; justify-content: center; font-family: sans-serif; padding: 20px;">
  <h2 style="margin-bottom: 40px; font-size: 24px; text-align: center;">パスワード再設定</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, style: "width: 100%; max-width: 320px;" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div style="margin-bottom: 30px;">
      <label style="display: block; margin-bottom: 10px;">ご登録済みのメールアドレス</label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width: 100%; height: 45px; border: none; padding: 0 10px; box-sizing: border-box;" %>
    </div>

    <div style="display: flex; flex-direction: column; gap: 20px;">
      <%= f.submit "再設定メールを送信", style: "width: 100%; height: 50px; background-color: white; border: none; font-size: 16px; cursor: pointer; font-weight: bold;" %>
      
      <%= link_to "ログイン画面に戻る", new_session_path(resource_name), style: "width: 100%; height: 50px; background-color: transparent; border: 1px solid white; font-size: 16px; cursor: pointer; text-decoration: none; color: black; display: flex; align-items: center; justify-content: center;" %>
    </div>
  <% end %>
</div>
