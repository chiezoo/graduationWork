<div style="background-color: #D9D9D9; min-height: 100vh; padding: 60px 20px; font-family: sans-serif; box-sizing: border-box; display: flex; flex-direction: column; align-items: center;">

  <div style="text-align: center; margin-bottom: 30px;">
    <h2 style="font-size: 24px; color: #333; font-weight: bold;">
      <%# 曜日の表示を整理 %>
      <%= @event.time&.to_date&.strftime('%m/%d') %>(<%= %w(日 月 火 水 木 金 土)[@event.time&.to_date&.wday] %>)
    </h2>
  </div>

  <div style="width: 100%; max-width: 500px;">
    <%= form_with(model: @event, local: true) do |f| %>
      <%= f.hidden_field :time %>

      <div style="display: flex; align-items: center; justify-content: center; gap: 10px; margin-bottom: 25px;">
        <label style="font-size: 18px; font-weight: bold;">服用時間：</label>
        <%= select_tag :select_hour, options_for_select((0..23).to_a.map{|h| ["%02d" % h, h]}, Time.current.hour), 
            style: "padding: 10px; font-size: 18px; border: none; background: white; color: #3333CC; font-weight: bold;" %>
        <span style="font-size: 18px; font-weight: bold;">:</span>
        <%= select_tag :select_minute, options_for_select((0..59).to_a.map{|m| ["%02d" % m, m]}, Time.current.min), 
            style: "padding: 10px; font-size: 18px; border: none; background: white; color: #3333CC; font-weight: bold;" %>
      </div>

      <% [1, 2, 3].each do |i| %>
        <div style="display: flex; align-items: center; margin-bottom: 15px;">
          <label style="width: 100%; max-width: 60px; font-size: 18px; font-weight: bold;">薬<%= i %></label>
          <div style="flex-grow: 1; position: relative;">
            <%= f.text_field "medicine#{i}", 
                list: "medicine-options", 
                placeholder: "薬の名前を入力または選択",
                style: "width: 100%; padding: 12px; font-size: 18px; border: none; background: white; color: #3333CC; box-sizing: border-box; outline: none;" %>
          </div>
        </div>
      <% end %>

      <datalist id="medicine-options">
        <% if @medicine_history.present? %>
          <% @medicine_history.each do |med| %>
            <option value="<%= med %>">
          <% end %>
        <% end %>
      </datalist>

      <div style="display: flex; align-items: center; justify-content: center; margin: 30px 0;">
        <label style="font-size: 18px; margin-right: 15px; font-weight: bold;">痛みレベル</label>
        <div style="background: white; width: 80px; height: 50px; display: flex; align-items: center; justify-content: center; position: relative;">
          <%= f.number_field :pain_level, in: 1..5, step: 1, value: 1,
              style: "width: 100%; height: 100%; font-size: 24px; border: none; text-align: center; color: #3333CC; background: transparent; outline: none; font-weight: bold;" %>
          <div style="position: absolute; right: 5px; display: flex; flex-direction: column; color: #3333CC; font-size: 10px; pointer-events: none;">
            <span>▲</span>
            <span>▼</span>
          </div>
        </div>
        <span style="margin-left: 10px; font-size: 14px; color: #666;">(1〜5)</span>
      </div>

      <div style="display: flex; align-items: flex-start; margin-bottom: 40px;">
        <label style="width: 100%; max-width: 60px; font-size: 18px; margin-top: 10px; font-weight: bold;">メモ</label>
        <%= f.text_area :memo, style: "flex-grow: 1; height: 120px; border: none; background: white; padding: 10px; color: #3333CC; font-size: 16px;" %>
      </div>

      <%# --- 修正したボタンエリア --- %>
      <div style="display: flex; justify-content: space-between; gap: 20px;">
        <%# キャンセルボタン：白背景 + 青枠 %>
        <%= link_to "キャンセル", events_path, 
            style: "flex: 1; background: white; padding: 15px; text-align: center; text-decoration: none; color: #3333CC; font-size: 18px; font-weight: bold; border: 2px solid #3333CC; border-radius: 6px; box-sizing: border-box;" %>
        
        <%# 保存ボタン：青背景 + 白文字 %>
        <%= f.submit "保存", 
            style: "flex: 1; background: #3333CC; padding: 15px; text-align: center; color: white; font-size: 18px; font-weight: bold; border: none; border-radius: 6px; cursor: pointer; box-sizing: border-box;" %>
      </div>

    <% end %>
  </div>
</div>
