<style>
  .gcp-font-setting {
    font-family: 'Helvetica Neue', Arial, 'Hiragino Kaku Gothic ProN', 'Hiragino Sans', Meiryo, sans-serif !important;
  }

  .gcp-calendar-table {
    width: 100%;
    border-collapse: collapse !important;
    table-layout: fixed;
    border: 4px solid #3333CC !important;
    background-color: white;
  }

  .gcp-calendar-table th, 
  .gcp-calendar-table td {
    border: 2px solid #3333CC !important; 
    vertical-align: top;
  }

  /* 2. 曜日のフォントを調整し、センタリングを追加 */
  .gcp-calendar-table th {
    background-color: #eee;
    padding: 12px 0;
    color: #333;
    font-weight: bold;
    font-size: 16px;
    text-align: center; /* ここで曜日を中央寄せにします */
  }

  .gcp-calendar-table td {
    height: 120px;
    position: relative;
  }

  /* 3. 日付数字の設定 */
  .day-number-container {
    text-align: right;
    padding: 5px 10px;
    font-size: 22px; 
    font-weight: bold;
    letter-spacing: -1px;
  }

  .day-link {
    text-decoration: none;
    color: black;
  }

  /* 4. 予定ボタンの設定 */
  .event-item {
    text-decoration: none;
    color: #3333CC;
    font-weight: bold;
    font-size: 15px;
    background: #e0e0ff;
    border-radius: 4px;
    padding: 5px;
    width: 88%;
    margin: 0 auto 5px;
    display: block;
    text-align: center;
  }
</style>

<% @date ||= Date.current %>

<div class="gcp-font-setting" style="background-color: #D9D9D9; min-height: 100vh; padding: 40px 20px;">
  
  <%# 年月・ナビゲーション %>
  <div style="text-align: center; margin-bottom: 40px;">
    <div style="font-size: 32px; margin-bottom: 10px; color: #333; font-weight: bold;"><%= @date.year %>年</div>
    
    <div style="display: flex; align-items: center; justify-content: center; gap: 40px;">
      <%= link_to events_path(month: (@date - 1.month).month, year: (@date - 1.month).year), style: "text-decoration: none;" do %>
        <span style="color: #3333CC; font-size: 60px;">◀</span>
      <% end %>
      
      <span style="font-size: 60px; color: #333; font-weight: bold; line-height: 1;"><%= @date.month %>月</span>
      
      <%= link_to events_path(month: (@date + 1.month).month, year: (@date + 1.month).year), style: "text-decoration: none;" do %>
        <span style="color: #3333CC; font-size: 60px;">▶</span>
      <% end %>
    </div>
  </div>

  <div style="max-width: 750px; margin: 0 auto;">
    <table class="gcp-calendar-table">
      <thead>
        <tr>
          <% %w[日 月 火 水 木 金 土].each_with_index do |day, i| %>
            <th style="color: <%= i == 0 ? 'red' : (i == 6 ? 'blue' : '#333') %>;"><%= day %></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% first_day = @date.beginning_of_month.beginning_of_week(:sunday) %>
        <% last_day = @date.end_of_month.end_of_week(:sunday) %>

        <% (first_day..last_day).to_a.in_groups_of(7) do |week| %>
          <tr>
            <% week.each do |date| %>
              <td style="<%= 'background-color: #f2f2f2;' if date.month != @date.month %>">
                <div class="day-number-container">
                  <%= link_to date.day, new_event_path(start_time: date), class: "day-link", style: "color: #{date.wday == 0 ? 'red' : (date.wday == 6 ? 'blue' : 'black')};" %>
                </div>

                <div style="display: flex; flex-direction: column; align-items: center;">
                  <% day_events = @events.select { |e| e.time&.to_date == date } if @events %>
                  <% day_events&.each do |event| %>
                    <%= link_to event_path(event), class: "event-item" do %>
                      <%= event.time&.strftime('%H:%M') %>
                    <% end %>
                  <% end %>
                </div>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
